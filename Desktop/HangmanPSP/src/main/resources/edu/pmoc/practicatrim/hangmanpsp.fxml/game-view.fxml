<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://schemas.microsoft.com/fxml"
            fx:controller="edu.pmoc.practicatrim.hangmanpsp.GameController"
            style="-fx-padding: 20;">

    <top>
        <VBox alignment="CENTER" spacing="10">
            <Label text="¡Ahorcado de la Naturaleza!" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <Label fx:id="puntuacionLabel" text="Puntuación: 0" />
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <ImageView fx:id="imagenAhorcado" fitHeight="200" fitWidth="200" preserveRatio="true">
            </ImageView>
            <Label fx:id="palabraOcultaLabel" text="_ _ _ _ _" style="-fx-font-size: 30; -fx-letter-spacing: 5;"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <TextField fx:id="letraInput" prefWidth="50" promptText="A"/>
            <Button text="Intentar" onAction="#onIntentarClick" />
        </HBox>
    </bottom>
</BorderPane>